<p id="notice"><%= notice %></p>

<h1>Records</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Student</th>
      <th>Grade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.name %></td>
        <td><%= record.student_id %></td>
        <td><%= record.grade %></td>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to '編輯', edit_record_path(record) %></td>
        <td><%= link_to '刪除', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

